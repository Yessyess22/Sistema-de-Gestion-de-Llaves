@model Persona

@{
    ViewData["Title"] = "Detalles de Persona";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-circle"></i> @ViewData["Title"]
                    </h5>
                </div>

                <div class="card-body">
                    <!-- Información General -->
                    <h6 class="border-bottom pb-2 mb-3">
                        <i class="fas fa-id-card"></i> Información Personal
                    </h6>

                    <div class="row mb-3">
                        <div class="col-md-2">
                            <strong>ID:</strong>
                        </div>
                        <div class="col-md-10">
                            <span class="badge bg-primary">@Model.IdPersona</span>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-2">
                            <strong>Nombre Completo:</strong>
                        </div>
                        <div class="col-md-10">
                            @Model.NombreCompleto
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-2">
                            <strong>Nombres:</strong>
                        </div>
                        <div class="col-md-10">
                            @Model.Nombres
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div>
                                <strong>Apellido Paterno:</strong>
                                <div>@Model.ApellidoPaterno</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div>
                                <strong>Apellido Materno:</strong>
                                <div>@Model.ApellidoMaterno</div>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div>
                                <strong>Fecha de Nacimiento:</strong>
                                <div>@Model.FechaNac.ToString("dd/MM/yyyy")</div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div>
                                <strong>Edad:</strong>
                                <div>
                                    <span class="badge bg-secondary">@Model.Edad años</span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información de Contacto -->
                    <h6 class="border-bottom pb-2 mb-3 mt-4">
                        <i class="fas fa-envelope"></i> Información de Contacto
                    </h6>

                    <div class="row mb-3">
                        <div class="col-md-2">
                            <strong>Email:</strong>
                        </div>
                        <div class="col-md-10">
                            <a href="mailto:@Model.Email">@Model.Email</a>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-2">
                            <strong>Teléfono:</strong>
                        </div>
                        <div class="col-md-10">
                            <a href="tel:@Model.Telefono">@Model.Telefono</a>
                        </div>
                    </div>

                    <!-- Identificación -->
                    <h6 class="border-bottom pb-2 mb-3 mt-4">
                        <i class="fas fa-fingerprint"></i> Identificación
                    </h6>

                    <div class="row mb-3">
                        <div class="col-md-2">
                            <strong>Tipo:</strong>
                        </div>
                        <div class="col-md-10">
                            @if (Model.Tipo == "Empresa")
                            {
                                <span class="badge bg-info">
                                    <i class="fas fa-building"></i> @Model.Tipo
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-success">
                                    <i class="fas fa-id-card"></i> @Model.Tipo
                                </span>
                            }
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div>
                                <strong>Código:</strong>
                                <div><code>@Model.Codigo</code></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div>
                                <strong>Cédula de Identidad (CI):</strong>
                                <div><code>@Model.CI</code></div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de Acción -->
                    <div class="d-grid gap-2 mt-4">
                        <a href="@Url.Action("Edit", new { id = Model.IdPersona })" class="btn btn-warning btn-lg">
                            <i class="fas fa-edit"></i> Editar Persona
                        </a>
                        <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Volver al Listado
                        </a>
                    </div>

                    <!-- Opción de Eliminar -->
                    <div class="mt-3">
                        <a href="@Url.Action("Delete", new { id = Model.IdPersona })" class="btn btn-danger btn-block" style="width: 100%;">
                            <i class="fas fa-trash"></i> Eliminar Persona
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
