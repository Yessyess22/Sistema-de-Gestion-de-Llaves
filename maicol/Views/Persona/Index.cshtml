@model IEnumerable<Persona>

@{
    ViewData["Title"] = "Gestión de Personas";
}

<div class="container-fluid mt-4">
    <!-- Encabezado -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="h3 mb-0">
                <i class="fas fa-users"></i> Gestión de Personas
            </h1>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Create")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nueva Persona
            </a>
        </div>
    </div>

    <!-- Mensajes de éxito/error -->
    @if (TempData["Exito"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Exito"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Filtros -->
    <div class="row mb-3">
        <div class="col-md-6">
            <form method="get" class="d-flex gap-2">
                <input type="text" name="busqueda" class="form-control" placeholder="Buscar por nombre, apellido o email..." 
                       value="@ViewData["BusquedaActual"]" />
                <button type="submit" class="btn btn-outline-primary">
                    <i class="fas fa-search"></i> Buscar
                </button>
                @if (ViewData["BusquedaActual"] != null)
                {
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        <i class="fas fa-times"></i> Limpiar
                    </a>
                }
            </form>
        </div>
        <div class="col-md-6">
            <div class="btn-group w-100" role="group">
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                    <i class="fas fa-list"></i> Todos
                </a>
                <a href="@Url.Action("PorTipo", new { tipo = "Documento" })" class="btn btn-outline-secondary">
                    <i class="fas fa-id-card"></i> Documentos
                </a>
                <a href="@Url.Action("PorTipo", new { tipo = "Empresa" })" class="btn btn-outline-secondary">
                    <i class="fas fa-building"></i> Empresas
                </a>
            </div>
        </div>
    </div>

    <!-- Tabla de personas -->
    @if (Model != null && Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-hover table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Nombre Completo</th>
                        <th>Email</th>
                        <th>Teléfono</th>
                        <th>Tipo</th>
                        <th>CI</th>
                        <th>Edad</th>
                        <th class="text-center">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var persona in Model)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">@persona.IdPersona</span>
                            </td>
                            <td>
                                <strong>@persona.NombreCompleto</strong>
                            </td>
                            <td>
                                <a href="mailto:@persona.Email">@persona.Email</a>
                            </td>
                            <td>
                                <a href="tel:@persona.Telefono">@persona.Telefono</a>
                            </td>
                            <td>
                                @if (persona.Tipo == "Empresa")
                                {
                                    <span class="badge bg-info">
                                        <i class="fas fa-building"></i> @persona.Tipo
                                    </span>
                                }
                                else
                                {
                                    <span class="badge bg-success">
                                        <i class="fas fa-id-card"></i> @persona.Tipo
                                    </span>
                                }
                            </td>
                            <td>
                                <code>@persona.CI</code>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@persona.Edad años</span>
                            </td>
                            <td class="text-center">
                                <a href="@Url.Action("Details", new { id = persona.IdPersona })" class="btn btn-sm btn-info" title="Ver">
                                    <i class="fas fa-eye"></i>
                                </a>
                                <a href="@Url.Action("Edit", new { id = persona.IdPersona })" class="btn btn-sm btn-warning" title="Editar">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("Delete", new { id = persona.IdPersona })" class="btn btn-sm btn-danger" title="Eliminar">
                                    <i class="fas fa-trash"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        <div class="row mt-3">
            <div class="col-md-12">
                <p class="text-muted">
                    <strong>Total de registros:</strong> @Model.Count()
                </p>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center" role="alert">
            <i class="fas fa-info-circle"></i> No hay personas registradas.
            <br />
            <a href="@Url.Action("Create")" class="btn btn-sm btn-primary mt-2">
                <i class="fas fa-plus"></i> Crear la primera persona
            </a>
        </div>
    }
</div>
