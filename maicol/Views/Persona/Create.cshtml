@model Persona

@{
    ViewData["Title"] = "Crear Nueva Persona";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-user-plus"></i> @ViewData["Title"]
                    </h5>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post" novalidate>
                        <!-- Token CSRF -->
                        @Html.AntiForgeryToken()

                        <!-- Sección de Información Personal -->
                        <h6 class="border-bottom pb-2 mb-3">
                            <i class="fas fa-id-card"></i> Información Personal
                        </h6>

                        <!-- Nombres -->
                        <div class="mb-3">
                            <label asp-for="Nombres" class="form-label">Nombres <span class="text-danger">*</span></label>
                            <input asp-for="Nombres" class="form-control" placeholder="Ej: Juan Carlos" />
                            <span asp-validation-for="Nombres" class="text-danger small"></span>
                        </div>

                        <!-- Apellidos en una fila -->
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ApellidoPaterno" class="form-label">Apellido Paterno <span class="text-danger">*</span></label>
                                    <input asp-for="ApellidoPaterno" class="form-control" placeholder="Ej: García" />
                                    <span asp-validation-for="ApellidoPaterno" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ApellidoMaterno" class="form-label">Apellido Materno <span class="text-danger">*</span></label>
                                    <input asp-for="ApellidoMaterno" class="form-control" placeholder="Ej: López" />
                                    <span asp-validation-for="ApellidoMaterno" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <!-- Fecha de Nacimiento -->
                        <div class="mb-3">
                            <label asp-for="FechaNac" class="form-label">Fecha de Nacimiento <span class="text-danger">*</span></label>
                            <input asp-for="FechaNac" class="form-control" type="date" />
                            <small class="text-muted">Debe ser mayor de 18 años</small>
                            <span asp-validation-for="FechaNac" class="text-danger small"></span>
                        </div>

                        <!-- Sección de Contacto -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-envelope"></i> Información de Contacto
                        </h6>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Correo Electrónico <span class="text-danger">*</span></label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="ejemplo@correo.com" />
                            <small class="text-muted">Debe ser un correo válido y único</small>
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <!-- Teléfono -->
                        <div class="mb-3">
                            <label asp-for="Telefono" class="form-label">Teléfono <span class="text-danger">*</span></label>
                            <input asp-for="Telefono" class="form-control" placeholder="Ej: +591 76543210" />
                            <small class="text-muted">Incluya código de país si es necesario</small>
                            <span asp-validation-for="Telefono" class="text-danger small"></span>
                        </div>

                        <!-- Sección de Identificación -->
                        <h6 class="border-bottom pb-2 mb-3 mt-4">
                            <i class="fas fa-fingerprint"></i> Identificación
                        </h6>

                        <!-- Tipo -->
                        <div class="mb-3">
                            <label asp-for="Tipo" class="form-label">Tipo de Persona <span class="text-danger">*</span></label>
                            <select asp-for="Tipo" class="form-select">
                                <option value="">-- Seleccionar --</option>
                                <option value="Documento">Documento (Persona Natural)</option>
                                <option value="Empresa">Empresa (Persona Jurídica)</option>
                            </select>
                            <span asp-validation-for="Tipo" class="text-danger small"></span>
                        </div>

                        <!-- Código -->
                        <div class="mb-3">
                            <label asp-for="Codigo" class="form-label">Código <span class="text-danger">*</span></label>
                            <input asp-for="Codigo" class="form-control" placeholder="Ej: CODIGO001" />
                            <span asp-validation-for="Codigo" class="text-danger small"></span>
                        </div>

                        <!-- CI -->
                        <div class="mb-3">
                            <label asp-for="CI" class="form-label">Cédula de Identidad (CI) <span class="text-danger">*</span></label>
                            <input asp-for="CI" class="form-control" placeholder="Ej: 1234567" />
                            <small class="text-muted">Debe ser único en el sistema</small>
                            <span asp-validation-for="CI" class="text-danger small"></span>
                        </div>

                        <!-- Botones -->
                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Guardar Persona
                            </button>
                            <a href="@Url.Action("Index")" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> Cancelar
                            </a>
                        </div>
                    </form>
                </div>
            </div>

            <!-- Información de validación -->
            <div class="alert alert-info mt-3">
                <i class="fas fa-lightbulb"></i> <strong>Validaciones:</strong>
                <ul class="mb-0 mt-2">
                    <li>Todos los campos marcados con * son obligatorios</li>
                    <li>El correo electrónico debe ser válido y no estar duplicado</li>
                    <li>La Cédula de Identidad debe ser única</li>
                    <li>Debe ser mayor de 18 años</li>
                </ul>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
