@model SistemaGestionLlaves.Models.Rol
@{
    ViewData["Title"] = "Eliminar Rol";
}

<div class="d-flex align-items-center justify-content-between mb-4">
    <div>
        <h2 class="fw-bold" style="color:#0f172a; font-size:1.4rem; margin-bottom:2px;">
            <i class="bi bi-trash me-2" style="color:#b91c1c;"></i>Eliminar Rol
        </h2>
        <p class="mb-0" style="color:#64748b; font-size:0.875rem;">Esta acción eliminará el rol seleccionado.</p>
    </div>
    <a asp-action="Index" class="btn px-4 py-2" style="background:#f1f5f9; color:#64748b; border-radius:12px; font-weight:600; border:none;">
        <i class="bi bi-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="ui-card">
    <div class="alert d-flex align-items-center gap-2 mb-4" style="background:#fee2e2; border:none; border-radius:12px; color:#991b1b;">
        <i class="bi bi-exclamation-triangle-fill"></i>
        ¿Confirmas eliminar el rol <strong>@Model.NombreRol</strong>?
    </div>

    <div class="row g-3 mb-4">
        <div class="col-md-8">
            <div style="color:#94a3b8; font-size:0.75rem; text-transform:uppercase; letter-spacing:0.05em;">Descripción</div>
            <div class="fw-semibold" style="color:#0f172a;">@(string.IsNullOrWhiteSpace(Model.Descripcion) ? "-" : Model.Descripcion)</div>
        </div>
        <div class="col-md-4">
            <div style="color:#94a3b8; font-size:0.75rem; text-transform:uppercase; letter-spacing:0.05em;">Estado</div>
            <div class="fw-semibold" style="color:#0f172a;">@(Model.Estado == "A" ? "Activo" : "Inactivo")</div>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="d-flex gap-2">
        <input type="hidden" asp-for="IdRol" />
        <button type="submit" class="btn px-4 py-2" style="background:#dc2626; color:white; border-radius:12px; font-weight:600; border:none;">
            <i class="bi bi-trash me-1"></i>Eliminar
        </button>
        <a asp-action="Index" class="btn px-4 py-2" style="background:#f1f5f9; color:#64748b; border-radius:12px; font-weight:600; border:none;">Cancelar</a>
    </form>
</div>