@{
    ViewData["Title"] = "Acceso Denegado";
}

<div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 60vh; text-align: center;">
    <div class="ui-card p-5" style="max-width: 480px; width: 100%;">
        <div class="mb-4">
            <div class="bg-danger bg-opacity-10 text-danger rounded-circle d-inline-flex align-items-center justify-content-center"
                 style="width: 80px; height: 80px; font-size: 2rem;">
                <i class="bi bi-shield-x-fill"></i>
            </div>
        </div>
        <h2 class="fw-bold text-dark mb-2">Acceso Denegado</h2>
        <p class="text-muted mb-4">
            No tienes permisos suficientes para acceder a este recurso.<br />
            Comunícate con el administrador del sistema si crees que es un error.
        </p>
        <div class="d-flex gap-2 justify-content-center">
            <a href="/" class="btn btn-primary rounded-3 px-4">
                <i class="bi bi-grid-1x2 me-1"></i> Ir al Dashboard
            </a>
            <a asp-controller="Cuenta" asp-action="Logout" class="btn btn-outline-secondary rounded-3 px-4">
                <i class="bi bi-box-arrow-right me-1"></i> Cerrar sesión
            </a>
        </div>
    </div>
</div>
