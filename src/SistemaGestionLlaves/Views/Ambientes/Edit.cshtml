@model SistemaGestionLlaves.Models.Ambiente

<h4>Editar Ambiente</h4>
<form asp-action="Edit">
    <input type="hidden" asp-for="IdAmbiente" />

    <div class="form-group">
        <label>Código</label>
        <input asp-for="Codigo" class="form-control" />
        <span asp-validation-for="Codigo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Nombre</label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Ubicación</label>
        <input asp-for="Ubicacion" class="form-control" />
    </div>

    <div class="form-group">
        <label>Estado</label>
        <select asp-for="Estado" class="form-control">
            <option value="A">Activo</option>
            <option value="I">Inactivo</option>
        </select>
    </div>

    <div class="form-group">
    <label>Tipo de Ambiente</label>
    <select asp-for="IdTipo" asp-items="ViewBag.Tipos" class="form-control">
    </select>
    </div>

    <br />

    <button type="submit" class="btn btn-success">Actualizar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}