@model IEnumerable<SistemaGestionLlaves.Models.Usuario>
@{
    ViewData["Title"] = "Index Usuarios (Backend Stub)";
}
<h2>Lista de Usuarios</h2>
<p><a asp-action="Create">Crear Nuevo</a></p>
<table border="1">
    <thead>
        <tr>
            <th>Nombre Usuario</th>
            <th>Estado</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.NombreUsuario</td>
            <td>@item.Estado</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdUsuario">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.IdUsuario">Detalles</a> |
                <a asp-action="Delete" asp-route-id="@item.IdUsuario">Eliminar</a>
            </td>
        </tr>
}
    </tbody>
</table>
