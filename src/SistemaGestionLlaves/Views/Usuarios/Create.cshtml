@model SistemaGestionLlaves.Models.Usuario

@{
    ViewData["Title"] = "Crear Nuevo Usuario";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="ui-card shadow-sm border-0">
            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                    <i class="bi bi-person-plus text-primary fs-4"></i>
                </div>
                <div>
                    <h2 class="card-title mb-1">Nuevo Usuario</h2>
                    <p class="text-muted small mb-0">Completa los datos para registrar un nuevo acceso al sistema.</p>
                </div>
            </div>

            <form asp-action="Create" method="post" class="needs-validation">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Asociar a Persona</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted">
                            <i class="bi bi-person"></i>
                        </span>
                        <select asp-for="IdPersona" class="form-select border-start-0 ps-0" asp-items="ViewBag.IdPersona" required>
                            <option value="">Selecciona una persona...</option>
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Rol del Sistema</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted">
                            <i class="bi bi-shield-lock"></i>
                        </span>
                        <select asp-for="IdRol" class="form-select border-start-0 ps-0" asp-items="ViewBag.IdRol" required>
                            <option value="">Selecciona un rol...</option>
                        </select>
                    </div>
                </div>

                <hr class="my-4 text-muted opacity-25">

                <div class="mb-3">
                    <label class="form-label fw-semibold text-primary">Credenciales de Acceso</label>
                    <div class="form-floating mb-3">
                        <input asp-for="NombreUsuario" class="form-control" placeholder="admin.apellido" required>
                        <label asp-for="NombreUsuario">Nombre de Usuario</label>
                    </div>
                    <div class="form-floating position-relative">
                        <input asp-for="PasswordHash" type="password" class="form-control" placeholder="Contraseña" required>
                        <label asp-for="PasswordHash">Contraseña</label>
                        <i class="bi bi-eye-slash position-absolute end-0 top-50 translate-middle-y me-3 text-muted cursor-pointer" id="togglePassword"></i>
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5">
                    <a asp-action="Index" class="btn btn-light rounded-pill px-4 me-md-2 fw-medium text-muted">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm">
                        <i class="bi bi-check-lg me-2"></i> Crear Usuario
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        const togglePassword = document.querySelector('#togglePassword');
        const passwordInput = document.querySelector('input[type="password"]');

        togglePassword.addEventListener('click', function (e) {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            this.classList.toggle('bi-eye');
            this.classList.toggle('bi-eye-slash');
        });
    </script>
}
