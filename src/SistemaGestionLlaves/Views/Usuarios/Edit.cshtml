@model SistemaGestionLlaves.Models.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="ui-card shadow-sm border-0">
            <div class="d-flex align-items-center mb-4">
                <div class="bg-primary bg-opacity-10 p-3 rounded-circle me-3">
                    <i class="bi bi-pencil-square text-primary fs-4"></i>
                </div>
                <div>
                    <h2 class="card-title mb-1">Editar Usuario</h2>
                    <p class="text-muted small mb-0">Modifica los permisos o datos de acceso para <strong>@Model.NombreUsuario</strong>.</p>
                </div>
            </div>

            <form asp-action="Edit" method="post" class="needs-validation">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                <input type="hidden" asp-for="IdUsuario" />

                <div class="mb-3">
                    <label class="form-label fw-semibold text-muted small text-uppercase">Información del Perfil</label>
                    <div class="input-group mb-3">
                        <span class="input-group-text bg-light border-end-0 text-muted">
                            <i class="bi bi-person"></i>
                        </span>
                        <select asp-for="IdPersona" class="form-select border-start-0 ps-0" asp-items="ViewBag.IdPersona" required></select>
                    </div>
                </div>

                <div class="mb-3">
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0 text-muted">
                            <i class="bi bi-shield-lock"></i>
                        </span>
                        <select asp-for="IdRol" class="form-select border-start-0 ps-0" asp-items="ViewBag.IdRol" required></select>
                    </div>
                </div>

                <hr class="my-4 text-muted opacity-25">

                <div class="mb-4">
                    <label class="form-label fw-semibold text-primary">Credenciales y Seguridad</label>
                    <div class="form-floating mb-3">
                        <input asp-for="NombreUsuario" class="form-control bg-light" placeholder="Usuario" required>
                        <label asp-for="NombreUsuario">Nombre de Usuario</label>
                    </div>
                    
                    <div class="form-floating position-relative">
                        <input asp-for="PasswordHash" type="password" name="PasswordHash" class="form-control" placeholder="Dejar en blanco para no cambiar">
                        <label asp-for="PasswordHash">Nueva Contraseña (Opcional)</label>
                        <i class="bi bi-eye-slash position-absolute end-0 top-50 translate-middle-y me-3 text-muted cursor-pointer" id="togglePassword"></i>
                    </div>
                    <div class="form-text text-muted small mt-1">
                        <i class="bi bi-info-circle me-1"></i> Deja el campo de contraseña vacío si no deseas cambiarla.
                    </div>
                </div>

                <div class="mb-4 p-3 bg-light rounded-3 bg-opacity-50">
                    <div class="form-check form-switch d-flex align-items-center">
                        <div class="flex-grow-1">
                            <label class="form-check-label fw-semibold" for="EstadoSwitch">Estado de la Cuenta</label>
                            <p class="text-muted small mb-0">Determina si el usuario puede iniciar sesión.</p>
                        </div>
                        <input class="form-check-input ms-3 fs-3" type="checkbox" id="EstadoSwitch" @(Model.Estado == "A" ? "checked" : "")>
                        <input type="hidden" asp-for="Estado" id="EstadoHidden" />
                    </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-5 border-top pt-4">
                    <a asp-action="Index" class="btn btn-light rounded-pill px-4 me-md-2 fw-medium text-muted border">
                        Cancelar
                    </a>
                    <button type="submit" class="btn btn-primary rounded-pill px-5 shadow-sm fw-bold">
                        <i class="bi bi-save2 me-2"></i> Guardar Cambios
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Toggle Password Visibility
        const togglePassword = document.querySelector('#togglePassword');
        const passwordInput = document.querySelector('input[name="PasswordHash"]');

        togglePassword.addEventListener('click', function (e) {
            const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
            passwordInput.setAttribute('type', type);
            this.classList.toggle('bi-eye');
            this.classList.toggle('bi-eye-slash');
        });

        // Sync Switch with Hidden Field
        const switchBtn = document.querySelector('#EstadoSwitch');
        const hiddenInp = document.querySelector('#EstadoHidden');

        switchBtn.addEventListener('change', function() {
            hiddenInp.value = this.checked ? "A" : "I";
        });
    </script>
}
